{
	"name": "sixach/wp-block-container",
	"type": "wordpress-block",
	"description": "Wrap several blocks in a parent wrapper and do more styling as well.",
	"keywords": [
		"block",
		"container",
		"group",
		"section",
		"wrapper"
	],
	"homepage": "https://www.sixa.ch",
	"license": "GPL-3.0",
	"authors": [
		{
			"name": "sixa AG",
			"homepage": "https://sixa.ch"
		}
	],
	"require": {
		"php": ">=7.3",
		"sixach/wp-snippets": "^1.4.1",
		"sixach/wp-block-api": "^1.0.2"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "git@github.com:sixach/wp-block-api.git"
		},
		{
		  "type": "vcs",
		  "url": "git@github.com:sixach/wp-snippets.git"
		}
	],
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"wp-coding-standards/wpcs": "^2.3.0",
		"phpunit/phpunit": "^9",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"php-parallel-lint/php-parallel-lint": "^1.2.0",
		"wp-cli/i18n-command": "^2.2.6"
	},
	"scripts": {
		"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"lint:wpcbf": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude node_modules .",
		"make-pot": "wp i18n make-pot . languages/sixa-block-container.pot --exclude=build"
	},
	"autoload": {
		"classmap": [ "block" ]
	}
}
